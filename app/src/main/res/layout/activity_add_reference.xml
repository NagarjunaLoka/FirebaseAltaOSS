<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".AddReferenceActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/logo"
                app:srcCompat="@mipmap/ic_launcher_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALTA OSS"
                android:layout_gravity="center"
                android:textColor="@color/Blue"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear"
        android:layout_below="@+id/toolbar">
        <HorizontalScrollView
            android:id="@+id/hsv1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none"
            android:background="@color/Blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/Blue">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/white"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Admin Dashboard  >>"
                    android:id="@+id/dashboard"
                    android:fontFamily="@font/bellb"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list"
                    android:layout_gravity="center"
                    android:text="  Interviews  >>"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/history"
                    android:text="  Reference List>>"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" Form"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

            </LinearLayout>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:id="@+id/hsv2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none"
            android:visibility="gone"
            android:background="@color/Blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/Blue">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/white"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" HR Dashboard  >>"
                    android:id="@+id/dashboard1"
                    android:fontFamily="@font/bellb"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list1"
                    android:layout_gravity="center"
                    android:text="  Interviews  >>"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/history1"
                    android:text="  Reference List >>"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  Form"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userid"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usertype"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selected"
        android:text="unselect"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/referencesta"
        android:text="Reference"
        android:visibility="gone"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interview-Reference"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/fullname"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:inputType="text"
                android:maxLength="25"
                android:textColorHint="#fff"
                android:background="@drawable/editcorner"
                android:drawableRight="@drawable/name"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:hint="Full Name"/>

            <EditText
                android:id="@+id/Qualification"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:inputType="text"
                android:maxLength="25"
                android:textColorHint="#fff"
                android:drawableRight="@drawable/qualif"
                android:paddingRight="20dp"
                android:background="@drawable/editcorner"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/fullname"
                android:hint="Qualification"/>

            <EditText
                android:id="@+id/fresh"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:inputType="text"
                android:maxLength="25"
                android:textColorHint="#fff"
                android:drawableRight="@drawable/expe"
                android:paddingRight="20dp"
                android:background="@drawable/editcorner"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Qualification"
                android:hint="Fresher / Experience"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:inputType="textEmailAddress"
                android:maxLength="25"
                android:textColorHint="#fff"
                android:drawableRight="@drawable/email"
                android:paddingRight="20dp"
                android:background="@drawable/editcorner"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/fresh"
                android:hint="Email"/>

            <EditText
                android:id="@+id/mobile"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:inputType="phone"
                android:maxLength="25"
                android:textColorHint="#fff"
                android:background="@drawable/editcorner"
                android:drawableRight="@drawable/phone"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/email"
                android:hint="Mobile"/>
            <EditText
                android:id="@+id/desgnation"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:inputType="text"
                android:maxLength="25"
                android:textColorHint="#fff"
                android:background="@drawable/editcorner"
                android:drawableRight="@drawable/designation1"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/mobile"
                android:hint="Designation"/>
            <EditText
                android:id="@+id/project"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:inputType="text"
                android:maxLength="25"
                android:textColorHint="#fff"
                android:drawableRight="@drawable/project"
                android:paddingRight="20dp"
                android:background="@drawable/editcorner"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/desgnation"
                android:hint="Project"/>
            <EditText
                android:id="@+id/referencename"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:inputType="text"
                android:maxLength="25"
                android:textColorHint="#fff"
                android:background="@drawable/editcorner"
                android:drawableRight="@drawable/refericon"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/project"
                android:hint="Reference Name"/>
            <EditText
                android:id="@+id/referenceid"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textColor="#fff"
                android:inputType="number"
                android:maxLength="10"
                android:textColorHint="#fff"
                android:background="@drawable/editcorner"
                android:drawableRight="@drawable/idrefer"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/referencename"
                android:hint="Reference Id"/>
            <Button
                android:id="@+id/btn1"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="#fff"
                android:background="@drawable/newcorner"
                android:layout_below="@+id/referenceid"
                android:layout_alignParentBottom="true"
                android:text="add-reference"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"/>


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
