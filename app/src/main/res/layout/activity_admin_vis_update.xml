<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminVisUpdate">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/logo"
                app:srcCompat="@mipmap/ic_launcher_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALTA OSS"
                android:layout_gravity="center"
                android:textColor="@color/Blue"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear"
        android:layout_below="@+id/toolbar">
        <HorizontalScrollView
            android:id="@+id/hsv1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none"
            android:background="@color/Blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/Blue">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/white"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Admin Dashboard  >>"
                    android:id="@+id/dashboard"
                    android:fontFamily="@font/bellb"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list"
                    android:layout_gravity="center"
                    android:text="  Visitor Dashboard >>"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/visitor"
                    android:text="  Visitors List >>"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/edit"
                    android:text="  Edit/Delete >>"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="  Update"
                    android:fontFamily="@font/bellb"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userid"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitor Update Form"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/vistv" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/vistv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditfname" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditfname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditlname" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="number"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditlname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditphone" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditphone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditcontactperson" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditcontactperson"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditcompanyname" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditcompanyname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditcompanyaddress" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditcompanyaddress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditemail" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditemail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditreasonforvisit" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditreasonforvisit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditdateofvisit" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditdateofvisit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditpersonalid" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/viseditpersonalid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/visedittypeofvisit" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#000"
                android:background="@drawable/border"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:layout_below="@+id/visedittypeofvisit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/viseditempid" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Update"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:textColor="@color/colorAccent"
                android:id="@+id/viseditupdate"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="19dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/viseditempid"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>