                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Casual Leave"
                        android:textSize="18dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="0dp"
